<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="rule_rental_user" model="ir.rule">
        <field name="name">Rental View All</field>
        <field name="model_id" ref="library.model_library_rental"/>
        <field name="groups" eval="[(4, ref('library.group_library_user'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="0"/>
        <field name="perm_unlink" eval="0"/>
        <field name="perm_create" eval="1"/>
        <field name="domain_force">[(1,'=',1)]</field>
    </record>

    <record id="rule_rental_user_edit_own" model="ir.rule">
        <field name="name">Rental Edit own</field>
        <field name="model_id" ref="library.model_library_rental"/>
        <field name="domain_force">[('create_uid', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('library.group_library_user'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_unlink" eval="1"/>
        <field name="perm_create" eval="1"/>
    </record>

    <record id="rule_rental_admin" model="ir.rule">
        <field name="name">Rental Admin</field>
        <field name="model_id" ref="library.model_library_rental"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('library.group_library_admin'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_unlink" eval="1"/>
        <field name="perm_create" eval="1"/>
    </record>
</odoo>
