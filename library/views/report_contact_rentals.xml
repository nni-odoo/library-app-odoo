<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_res_partner_rentals_document" name="template_name">
        <t t-call="web.external_layout">
            <div class="page">
                <h2 class="mt-4">
                    <span t-field="doc.name"/>
                </h2>

                <table class="table table-sm o_main_table mt-4">
                    <thead style="display: table-row-group">
                        <tr>
                            <th name="th_book" class="text-start">Book</th>
                            <th name="th_start" class="text-end">Start Date</th>
                            <th name="th_end" class="text-end">End Date</th>
                            <th name="th_overdue" class="text-end">Overdue Fee</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="doc.rented_books" t-as="rental">
                            <tr>
                                <td name="td_book"><span t-field="rental.book"/></td>
                                <td name="td_start"><span t-field="rental.date_rent"/></td>
                                <td name="td_end"><span t-field="rental.date_end"/></td>
                                <td name="td_overdue" t-att-class="'bg-danger' if rental.overdue_fee else ''"><span t-field="rental.overdue_fee"/></td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </t>
    </template>

    <template id="report_res_partner_rentals">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="library.report_res_partner_rentals_document" t-lang="doc.lang"/>
            </t>
        </t>
    </template>

    <record id="action_partner_rentals" model="ir.actions.report">
        <field name="name">Rental Records</field>
        <field name="model">res.partner</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">library.report_res_partner_rentals</field>
        <field name="binding_model_id" ref="base.model_res_partner"/>
        <field name="binding_type">report</field>
    </record>

</odoo>
